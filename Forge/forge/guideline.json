{
  "guideline_version": "2026.01.21",
  "hardware_target": "NVIDIA_RTX_5080",
  "architecture_metadata": {
    "codename": "Blackwell",
    "compute_capability": 12.0,
    "vram_capacity_gb": 16,
    "memory_type": "GDDR7",
    "tensor_core_gen": 5,
    "recommended_precisions": ["BF16", "FP8", "TF32"]
  },
  "required_software_stack": {
    "os": "Ubuntu 24.04+ or Windows 11 (WSL2)",
    "nvidia_driver": ">=581.29",
    "cuda_toolkit": "13.0",
    "cudnn": "9.13+",
    "python": "3.11",
    "pytorch": "2.10.0+cu130"
  },
  "unique_configs": {
    "blackwell_50_series": {
      "training_mode": "native_bf16_fp8",
      "torch_compile_backend": "triton_3_3",
      "flags": {
        "bf16": true,
        "fp16": false,
        "tf32": true,
        "use_grad_scaler": false,
        "fp8_mixed_precision": true
      },
      "rationale": "GradScaler is deprecated for SM 12.0 as BF16 covers full FP32 dynamic range."
    },
    "ada_lovelace_40_series": {
      "training_mode": "bf16",
      "flags": {
        "bf16": true,
        "fp16": false,
        "tf32": true,
        "use_grad_scaler": false
      },
      "rationale": "High native BF16 performance; no underflow risk."
    },
    "ampere_30_series": {
      "training_mode": "bf16_stable",
      "flags": {
        "bf16": true,
        "fp16": false,
        "tf32": true,
        "use_grad_scaler": false
      },
      "rationale": "First gen to support BF16; stable without loss scaling."
    },
    "turing_20_series": {
      "training_mode": "legacy_fp16",
      "flags": {
        "bf16": false,
        "fp16": true,
        "tf32": false,
        "use_grad_scaler": true
      },
      "rationale": "Requires GradScaler due to narrow FP16 exponent range."
    }
  },
  "slm_optimization_strategy": {
    "model_loading": "bitsandbytes_4bit_nf4",
    "peft_method": "QLoRA",
    "attention_implementation": "flash_attention_2_7",
    "vram_management": {
      "gradient_checkpointing": "unsloth",
      "gradient_accumulation_steps": 4,
      "per_device_train_batch_size": 2
    }
  },
  "environment_setup_cmd": "pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu130 && pip install unsloth flash-attn triton==3.3.0"
}
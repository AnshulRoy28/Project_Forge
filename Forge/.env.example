# F  orge Environment Configuration
# Copy this file to .env and fill in your values

# Gemini API Key (optional - can also be set via 'forge init')
GEMINI_API_KEY=

# Enable deep data audit (sends dataset content to Gemini for analysis)
# Set to "true" only if you trust cloud processing of your data
FORGE_DEEP_AUDIT=false

# Training data directory (default: ./data/)
FORGE_DATA_DIR=./data/

# Checkpoint directory (default: ./checkpoints/)
FORGE_CHECKPOINT_DIR=./checkpoints/

# Output model directory (default: ./output/)
FORGE_OUTPUT_DIR=./output/

# Log level (DEBUG, INFO, WARNING, ERROR)
FORGE_LOG_LEVEL=INFO
